[
  {
    "name": "Tables",
    "category": "Layout",
    "description": "Pipe-separated Markdown tables",
    "flavors": {
      "Standard Markdown": {
        "supported": false
      },
      "GitHub Flavored Markdown (GFM)": {
        "supported": true,
        "syntax": "| Col1 | Col2 |\n|------|------|\n| A1   | A2   |"
      },
      "Pandoc": {
        "supported": true,
        "syntax": "| Col1 | Col2 |\n|------|------|\n| A1   | A2   |",
        "notes": "Also supports multiline and grid tables"
      }
    }
  },
  {
    "name": "Footnotes",
    "category": "References",
    "description": "Allow referencing footnotes",
    "flavors": {
      "Standard Markdown": { "supported": false },
      "GitHub Flavored Markdown (GFM)": { "supported": true, "syntax": "Here is text[^1]\n\n[^1]: Footnote text" },
      "Pandoc": { "supported": true, "syntax": "Here is text[^1]\n\n[^1]: Footnote text" }
    }
  },
  {
    "name": "Task Lists",
    "category": "Tasks",
    "description": "Checklist style lists",
    "flavors": {
      "Standard Markdown": { "supported": false },
      "GitHub Flavored Markdown (GFM)": { "supported": true, "syntax": "- [x] Done\n- [ ] Todo" },
      "Pandoc": { "supported": false }
    }
  }
]
